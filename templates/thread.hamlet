<div .pgcontainer>
    <h1>
        #{ForumTitulo thread}
        
    $maybe mensa <- msg
        <div .alert.alert-success>
            ^{mensa}
    $nothing
    
    <table .table.table-striped>
        <thead .thread-dark>
            <tr>
                <th>
                <th>
                    Mensagem
        <tbody>
            $forall (Entity _ forum, Entity _ mensagem, Entity _ user) <- mensagens
                <tr .row>
                    <td .w-25.align-top>
                        Usu√°rio: #{usuarioUsername user}
                        <br>
                        Data: #{dateFormat $ mensagemPostada mensagem}
                    <td .text-justify>
                        #{show $ mensagemTexto mensagem}
        <tfoot>
            <tr>
                <td colspan=2 .ftable>
                    <form method=post action=@{MensagemR tid}>
                        <input type="text" name="mensagem" .form-control>
                        <input type="submit" name="postar" value="Postar" .btn.btn-primary>